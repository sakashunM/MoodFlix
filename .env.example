# MoodFlix Environment Configuration
# Copy this file to .env and fill in your actual values

# ===== API Keys (REQUIRED) =====
# OpenAI API Key for emotion analysis
OPENAI_API_KEY=your_openai_api_key_here

# TMDb API Key for movie data
TMDB_API_KEY=your_tmdb_api_key_here

# ===== Application Settings =====
# Environment: development, staging, production
FLASK_ENV=development
FLASK_DEBUG=true

# Frontend API base URL
REACT_APP_API_BASE_URL=http://localhost:5000

# ===== Security & Rate Limiting =====
# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Rate limits
RATE_LIMIT_PER_MINUTE=3
RATE_LIMIT_PER_DAY=100

# OpenAI monthly spending limit (USD)
OPENAI_MONTHLY_LIMIT=7

# Emergency stop switch (set to true to disable AI features)
EMERGENCY_STOP=false

# ===== Cache Settings =====
# Cache TTL in hours
CACHE_TTL_HOURS=24

# Redis URL (for Docker Compose, use default)
REDIS_URL=redis://redis:6379/0

# ===== Logging =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===== External Services =====
# TMDb API base URL (usually no need to change)
TMDB_BASE_URL=https://api.themoviedb.org/3

# OpenAI API base URL (usually no need to change)
OPENAI_API_BASE=https://api.openai.com/v1

# ===== Production Settings =====
# Secret key for Flask sessions (generate a random string for production)
SECRET_KEY=your_secret_key_here

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===== Monitoring & Analytics =====
# Enable analytics (future feature)
ANALYTICS_ENABLED=false
